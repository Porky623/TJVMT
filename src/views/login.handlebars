<section class="flex h-screen items-center justify-center">
    <div class="w-1/3 text-center">
        <h2 class="m-auto font-adam text-5xl gradient-text text-center">Login</h2>
        <form action="{{ prefix }}auth/login" method="POST">
            <input type="text" placeholder="Ion Username" name="ionUsername" class="block m-auto my-5 p-4 w-full text-xl bg-gray-100 focus:bg-gray-200 transition duration-300 ease-in-out"/>
            <input type="password" placeholder="Password" name="password" class="block m-auto my-5 p-4 w-full text-xl bg-gray-100 focus:bg-gray-200 transition duration-300 ease-in-out"/>
            <input type="submit" value="Login" class="block m-auto my-5 pt-3 pb-2 px-10 font-adam text-xl rounded-full bg-white border-solid border-black border-2 hover:bg-gray-100 transition duration-300 ease-in-out">
        </form>
        <p>Don't have an account?</p>
        <a href="{{ prefix }}auth/register" class="text-left text-blue-500 hover:underline">Register Here</a>
    </div>
</section>