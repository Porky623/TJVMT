<section class="flex items-center justify-center pt-24">
    <div class="text-center w-4/5 md:w-1/2 xl:w-1/3">
        <h2 class="m-auto font-adam text-5xl gradient-text text-center">Login</h2>
        <form action="{{ prefix }}auth/login" method="POST">
            <input type="text" placeholder="Ion Username" name="ionUsername" required class="block m-auto my-5 p-4 w-full text-l bg-gray-100 focus:bg-gray-200 focus:outline-none transition duration-300 ease-in-out"/>
            <input type="password" placeholder="Password" name="password" required class="block m-auto my-5 p-4 w-full text-l bg-gray-100 focus:bg-gray-200 focus:outline-none transition duration-300 ease-in-out"/>
            <input type="submit" value="Login" class="block m-auto my-5 pt-3 pb-2 px-10 font-adam text-l rounded-full bg-white border-solid border-black border-2 hover:bg-gray-100 transition duration-300 ease-in-out">
        </form>
        <p>Don't have an account?</p>
        <a href="{{ prefix }}auth/register" class="text-left text-blue-500 hover:underline">Register Here</a>
    </div>
</section>