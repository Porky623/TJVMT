    <script>
        $(function () {
            $(document).scroll(function() {
                let nav = $("#navbar");
                nav.toggleClass('bg-white', $(this).scrollTop() > 0 || $("#nav-toggle-graphics").hasClass("opened"));
            });

            $('#flash_notifications').delay(4000).fadeOut(300);

            $("#nav-toggle").click(function() {
                let nav = $("#navbar");
                if (!nav.hasClass("bg-white") || $(document).scrollTop() <= 0) {
                    nav.toggleClass("bg-white");
                }

                let navl = $("#nav-links");
                navl.toggleClass("block");
                navl.toggleClass("hidden");
                navl.toggleClass("top-hidden");

                let graphics = $("#nav-toggle-graphics");
                graphics.toggleClass("opened");
            });
        });

        $("#{{ pageName }}_link").addClass("gradient-underline");
    </script>
