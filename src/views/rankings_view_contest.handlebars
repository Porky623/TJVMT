<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }
</style>
<div class="container-fluid">
    <h3>{{testName}}</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Weighting</th>
        </tr>
        {{#each weights}}
            <tr class="{{rowClass}}">
                <td>{{name}}</td>
                <td>{{weight}}</td>
            </tr>
        {{/each}}
    </table>
    <table>
        <tr>
            <th>Rank</th>
            <th>Name</th>
            <th>Index</th>
            <th>GradYear</th>
            <th>Grade</th>
        </tr>
        {{#each ranks}}
            <tr class="{{rowClass}}">
                <td>{{rank}}</td>
                <td>{{studentName}}</td>
                <td>{{indexVal}}</td>
                <td>{{gradYear}}</td>
                <td>{{grade}}</td>
            </tr>
        {{/each}}
    </table>
</div>